<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_project_check_tms" model="ir.ui.view">
        <field name="name">project.project.form</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr='//div[@name="options_active"]' position='after'>
                <div>
                    <field name="check_timesheet" class="oe_inline"/>
                    <label for="check_timesheet" class="oe_inline" string="check timesheet"/>
                </div>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="view_task_form2_inherited">
            <field name="name">project.task.form.inherited</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2" />
            <field name="groups_id" eval="[(4, ref('base.group_user'))]"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook//field[@name='timesheet_ids']" position="replace">
                   <field name="timesheet_ids" context="{'default_project_id': project_id}">
                        <tree editable="bottom" delete="0" string="Timesheet Activities" default_order="date">
                            <field name="stage" invisible="1"/>
                            <field name="date" attrs="{'readonly':[('stage', '=', 'approved')]}"/>
                            <field name="user_id" required="1" attrs="{'readonly':[('stage', '=', 'approved')]}"/>
                            <field name="name" attrs="{'readonly':[('stage', '=', 'approved')]}"/>
                            <field name="unit_amount" string="Duration" widget="float_time" attrs="{'readonly':[('stage', '=', 'approved')]}"/>
                            <field name="project_id" invisible="1"/>
                        </tree>
                    </field>
                </xpath>
            </field>
    </record>

    <record id="project_issue_form_view" model="ir.ui.view">
            <field name="name">project.issue.form.inherited</field>
            <field name="model">project.issue</field>
            <field name="groups_id" eval="[(4, ref('base.group_user'))]"/>
            <field name="inherit_id" ref="project_issue.project_issue_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//notebook//field[@name='timesheet_ids']" position="replace">
                    <field name="timesheet_ids" colspan="4" nolabel="1" context="{'default_user_id' : uid, 'default_project_id': project_id}"
                            groups="base.group_user">
                        <tree editable="top" delete="0" string="Timesheet Activities">
                            <field name="stage" invisible="1"/>
                            <field name="date" attrs="{'readonly':[('stage', '=', 'approved')]}"/>
                            <field name="user_id" required="1" attrs="{'readonly':[('stage', '=', 'approved')]}"/>
                            <field name="name" attrs="{'readonly':[('stage', '=', 'approved')]}"/>
                            <field name="project_id" invisible="1" required="1"/>
                            <field name="unit_amount" string="Duration" widget="float_time" attrs="{'readonly':[('stage', '=', 'approved')]}"/>
                        </tree>
                    </field>
                </xpath>
            </field>
        </record>
</odoo>
