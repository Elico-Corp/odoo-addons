<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_order_enterprise_form" model="ir.ui.view">
            <field name="name">sale.enterprise.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath
                        expr="//field[@name='amount_untaxed']"
                        position="before">
                        <field name="all_discounts"/><button
                               name="update_discount_lines"
                               type="object"
                               class="oe_highlight"
                               string="Dicounts all"
                               context="{'all_discounts':all_discounts}" />
                               <separator/>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</openerp>

